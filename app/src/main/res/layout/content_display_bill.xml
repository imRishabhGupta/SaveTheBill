<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DisplayBill">


    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:layout_marginTop="56dp"
        tools:context="com.example.user.savethebill.DisplayBill">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true">

            <ImageView
                android:layout_width="150dp"
                android:layout_height="200dp"
                android:id="@+id/imageView2"
                android:layout_gravity="center_horizontal" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:textAlignment="center"
                android:id="@+id/textView"
                android:textSize="25sp"
                android:layout_marginTop="15dp"/>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:layout_marginTop="15dp">

                <TextView
                    android:layout_width="170dp"
                    android:layout_height="30dp"
                    android:textSize="20sp"
                    android:text="Owner"/>

                <TextView
                    android:layout_width="170dp"
                    android:layout_height="30dp"
                    android:textSize="20sp"
                    android:text="Type"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:layout_marginTop="15dp">

                <TextView
                    android:layout_width="170dp"
                    android:layout_height="30dp"
                    android:textSize="20sp"
                    android:id="@+id/textView2" />

                <TextView
                    android:layout_width="170dp"
                    android:layout_height="30dp"
                    android:textSize="20sp"
                    android:id="@+id/textView3"

                    />
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:layout_marginTop="15dp">

                <TextView
                    android:layout_width="170dp"
                    android:layout_height="30dp"
                    android:textSize="20sp"
                    android:text="End Date 1"/>

                <TextView
                    android:layout_width="170dp"
                    android:layout_height="30dp"
                    android:textSize="20sp"
                    android:text="End Date 2"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:layout_marginTop="15dp">

                <TextView
                    android:layout_width="170dp"
                    android:layout_height="30dp"
                    android:id="@+id/textView4" />

                <TextView
                    android:layout_width="170dp"
                    android:layout_height="30dp"
                    android:id="@+id/textView5"

                    />
            </LinearLayout>
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_gravity="center_horizontal">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Delete"
                android:id="@+id/button"
                android:layout_marginRight="5dp"
                android:layout_marginTop="10dp"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Edit"
                android:layout_marginTop="10dp"
                android:id="@+id/edit"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Alarm 1"
        android:layout_marginTop="10dp"
        android:id="@+id/alarm1"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Alarm 2"
        android:layout_marginTop="10dp"
        android:id="@+id/alarm2"/>
</LinearLayout>

        </LinearLayout>
    </RelativeLayout>
</ScrollView>